{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "components.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "lib": ["esnext", "dom"],
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["vue3-toastify/global"],
    "typeRoots": ["src/types"]
  }
}
